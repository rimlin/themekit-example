{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext",
			"es6"
		],
		"allowJs": true,
		"baseUrl": "src",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react",
		"types": [
			"jest",
			"node"
		]
	},
	"include": [
		"src",
		"types"
	],
	"exclude": [
		"build",
		"node_modules"
	]
}
