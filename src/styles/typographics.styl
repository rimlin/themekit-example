@import './mixins'

body
	font-family var(--typography-font-family)
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	font-size 16px
	line-height 20px

h1
	title(32px, 40px)
	font-weight bold

h2
	title(24px, 30px)

h3
	title(20px, 24px)

h4
	title(15px, 18px)
	font-weight 400
